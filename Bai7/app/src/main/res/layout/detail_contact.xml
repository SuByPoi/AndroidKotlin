<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailContact"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#607d8d">
        <ImageView
            android:id="@+id/im_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_24" />
        <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/btn_edit"
                    android:src="@drawable/ic_baseline_star_border_24" />
        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/menu"
            android:src="@drawable/ic_baseline_edit_24"/>
        <ImageView
                    android:id="@+id/menu"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_baseline_more_vert_24" />



        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="Nguyen Thai Loc"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:ignore="HardcodedText,SpUsage" />
    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:background="@drawable/border"
       android:layout_marginTop="10dp"
       android:layout_marginHorizontal="8dp">
       <ImageView
           android:id="@+id/icon_call"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"
           android:layout_marginStart="20dp"
           android:src="@drawable/ic_baseline_phone_24"
           app:tint="#768787" />
       <TextView
           android:id="@+id/phone_number"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/icon_call"
           android:layout_marginStart="30dp"
           android:layout_marginTop="0dp"
           android:layout_marginEnd="30dp"
           android:layout_toStartOf="@+id/icon_chat"
           android:layout_toEndOf="@+id/icon_call"
           android:fontFamily="sans-serif-black"
           android:text="0384933379"
           android:textColor="@color/black"
           android:textSize="17dp"
           tools:ignore="HardcodedText,SpUsage" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/phone_number"
           android:layout_marginStart="30dp"
           android:layout_marginTop="0dp"
           android:layout_marginEnd="30dp"
           android:layout_toStartOf="@+id/icon_chat"
           android:layout_toEndOf="@+id/icon_call"
           android:text="Mobile"
           android:textSize="15dp"
           tools:ignore="HardcodedText,SpUsage" />
       <ImageView
           android:id="@+id/icon_chat"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:layout_marginEnd="20dp"
           android:src="@drawable/ic_baseline_chat_24"
           app:tint="#768787" />

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="8dp">
        <ImageView
            android:id="@+id/icon_mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_email_24"
            app:tint="#768787" />
        <TextView
            android:id="@+id/tx_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_mail"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/icon_mail"
            android:fontFamily="sans-serif-black"
            android:text="thailoc@gmail.com"
            android:textColor="@color/black"
            android:textSize="17dp"
            tools:ignore="HardcodedText,SpUsage" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_mail"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/icon_mail"
            android:text="Gmail"
            android:textSize="15dp"
            tools:ignore="HardcodedText,SpUsage" />

    </RelativeLayout>




</LinearLayout>