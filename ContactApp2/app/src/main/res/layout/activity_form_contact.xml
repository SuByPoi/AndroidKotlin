<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <ImageView
        android:id="@+id/rv_contact"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_centerHorizontal="true"
        android:background="#c0c0c0" />
    <ImageView
        android:id="@+id/im_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        android:layout_alignRight="@+id/rv_contact"
        android:layout_alignBottom="@+id/rv_contact"/>
    <ImageView
        android:id="@+id/im_name"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rv_contact"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/ed_firstname"
        android:layout_below="@+id/rv_contact"
        android:layout_toRightOf="@+id/im_name"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:textColor="#9C9999"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/ed_lastname"
        android:layout_below="@+id/ed_firstname"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:background="#FFF"
        android:textColorHint="#c5c5c5"
        android:textColor="#9C9999"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        />
    <ImageView
        android:id="@+id/im_phone"
        android:src="@drawable/ic_baseline_phone_24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed_lastname"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/ed_phone"
        android:layout_below="@+id/ed_lastname"
        android:layout_toRightOf="@+id/im_phone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:textColor="#9C9999"
        android:padding="10dp"
        />
    <ImageView
        android:id="@+id/im_email"
        android:src="@drawable/ic_baseline_email_24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed_phone"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/ed_mail"
        android:layout_below="@+id/ed_phone"
        android:layout_toRightOf="@+id/im_email"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:textColor="#9C9999"
        android:padding="10dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_save"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>



</RelativeLayout>